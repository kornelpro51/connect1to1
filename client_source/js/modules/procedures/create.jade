section.col-sm-6.col-sm-offset-3
  form.form-horizontal.form-small(data-ng-submit='create()', novalidate='novalidate')
    section.panel
      header.panel-heading
        span.h4 Create New Procedure
      .panel-body
        .form-group
          label.col-lg-2.control-label(for='name') Name
          .col-lg-10
            input#name.form-control(type='text', data-ng-model='name', placeholder='Name', required='required')
          div(data-form-error='data-form-error', data-field-name='name', data-errors='errors')
        .form-group
          label.col-lg-2.control-label(for='attributes') Attributes
          .col-lg-10
            input#attributes(multiple='multiple', data-ui-select2='attributesSelect2Options', data-ng-model='attributes', data-placeholder='Choose some attributes')
          div(data-form-error='data-form-error', data-field-name='attributes', data-errors='errors')
      footer.panel-footer.text-right.bg-light.lter
        button.btn.btn-primary(type='submit', data-ng-click='create()') Save
