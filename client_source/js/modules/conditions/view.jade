section.col-sm-6.col-sm-offset-3(data-ng-init='findOne()')
  section.panel
    header.panel-heading
      span.h4 {{ condition.name }}
      a.pull-right(data-ui-sref='conditions.details.edit({ conditionId: condition._id })') edit
    .panel-body
      ul.list-group.alt
        li.list-group-item(data-ng-repeat='attr in condition.attributes')
          .media
            .media-body
              | {{ attr.name }} ({{ attr.section }})
