include _form-fields

section.wrapper
  form.form-horizontal(data-ng-submit='create(organization)', novalidate='novalidate', name='organizationForm')
    section.panel
      header.panel-heading
        span.h4 Create New Organization

    mixin organizationFormFields('organization')

    section.panel
      pre {{organization|json}}

    section.panel
      footer.panel-footer.text-right.bg-light.lter
        button.btn.btn-primary(type='submit', data-ng-disabled='organizationForm.$invalid') Save
